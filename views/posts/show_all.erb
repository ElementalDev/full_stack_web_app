<h1 class="page_title">These are all the movies on the database</h1>
<!-- For each post -->
<div class="container films">
  <div class="row">
    <% @posts.each do |post| %>
      <!-- Link to its specific page -->
      <!-- Show its image -->
      <div class="col-sm-3">
        <a class="film_link" href="/movies/<%= post.id %>">
          <figure class="img_cont">
            <img class="post_img" src="<%= post.img_url %>" alt="Picture not found">
          </figure>
          <!-- Show a title -->
          <figcaption><h2 class="movie_title"><%= post.title %></h2></figcaption>
        </a>
      </div>
    <% end %>
  </div>
</div>
