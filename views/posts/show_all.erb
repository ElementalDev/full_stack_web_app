<h1>These are all the movies on the database</h1>
<!-- For each post -->
<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <!-- Link to its specific page -->
      <!-- Show its image -->
      <div class="col-sm-3">
        <a href="/movies/<%= post.id %>">
          <figure>
            <img src="<%= post.img_url %>" alt="Picture not found">
          </figure>
          <!-- Show a title -->
          <figcaption><h2><%= post.title %></h2></figcaption>
        </a>
      </div>
    <% end %>
  </div>
</div>
